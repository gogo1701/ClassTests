@model Test

<div class="container mt-4">
    <h3>Edit Task</h3>
    <form method="post">
        <div class="mb-3">
            <label for="Title" class="form-label">Task Title</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>
        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea class="form-control" id="Description" name="Description" rows="3" required>@Model.Description</textarea>
        </div>
        <div class="mb-3">
            <label for="DayOfWeek" class="form-label">Day of the Week</label>
            @Html.DropDownListFor(m => m.DayOfWeek, (IEnumerable<SelectListItem>)ViewBag.Days, new { @class = "form-control", required = "required" })
        </div>
        <button type="submit" class="btn btn-warning">Save Changes</button>
    </form>
</div>
