@model List<Test>

<div class="container mt-4">
    <div class="row justify-content-center g-4">
        @foreach (var day in new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday" })
        {
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-header text-center fw-bold fs-4 bg-primary text-white py-3">
                        @day
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.Where(x => x.DayOfWeek == day))
                        {
                            <div class="card mb-3 shadow-sm">
                                <div class="card-body">
                                    <h6 class="card-title">@item.Title</h6>
                                    <p class="card-text">@item.Description</p>
                                    <div class="d-flex justify-content-between">
                                        <a href="@Url.Action("ViewTask", "Week", new { id = item.Id })" class="btn btn-primary btn-sm">View</a>
                                        <a href="@Url.Action("Edit", "Week", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                                        <a href="@Url.Action("Delete", "Week", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this task?')">Delete</a>
                                    </div>
                                </div>
                            </div>
                        }
                        <a href="@Url.Action("Create", "Week")" class="btn btn-success btn-sm w-100">+ Add Task</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
